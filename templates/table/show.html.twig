{% extends 'base.html.twig' %}

{% block title %}Table{% endblock %}

{% block body %}
    <h1>Table</h1>
    
    <table class="table">
        <tbody>
            <tr>
                <th>Nome </th>
                <td>{{ table.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ table.number }}</td>
            </tr>
            <tr>
                <th>People</th>
                <td>{{ table.people }}</td>
            </tr>
            <tr>
                <th>Reservation</th>
                <td>{{ table.reservation ? table.reservation|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Free</th>
                <td>{{ table.free ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Piatti</th>
                {%for order in table.orders  %}
                    <td>{{ order.dish }} x {{order.amount}} {{order.dish.price}}â‚¬  <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a></td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_table_index') }}">back to list</a>

    <a href="{{ path('app_table_edit', {'id': table.id}) }}">edit</a>

    {{ include('table/_delete_form.html.twig') }}
{% endblock %}
