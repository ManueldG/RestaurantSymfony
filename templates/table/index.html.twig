{% extends 'base.html.twig' %}

{% block title %}Table index{% endblock %}

{% block body %}
    <h1>Table index</h1>

    
        <section>
            {% for table in tables %}
            
                <a href="{{ path('app_table_show', {'id': table.id}) }}">
                    <div class="square">
                        <ul>
                            <li>{{ table.number }}</li>
                            <li>{{ table.name }}</li>
                        </ul>
                    </div>
                </a>
            
            {% else %}
            
                    no records found
            
            {% endfor %}
        </section>        

    <a class="btn" href="{{ path('app_table_new') }}">Create new</a>

{% endblock %}
